<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/gray_200"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header de la section (cliquable) -->
        <LinearLayout
            android:id="@+id/layoutSectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Numéro de section -->
            <TextView
                android:id="@+id/tvSectionNumber"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_section_number"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titre de la section"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSectionInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="1 PDF • 3 vidéos • 25 min"
                    android:textColor="@color/gray_500"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivExpandIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_expand_more"
                app:tint="@color/gray_500" />
        </LinearLayout>

        <!-- Contenu expandable -->
        <LinearLayout
            android:id="@+id/layoutSectionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp"
            android:visibility="gone">

            <!-- Document PDF -->
            <LinearLayout
                android:id="@+id/layoutPdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pdf_item"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_pdf"
                    app:tint="@color/red_500" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPdfTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Document.pdf"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPdfSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.5 MB"
                        android:textColor="@color/gray_500"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnDownloadPdf"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Télécharger PDF"
                    android:src="@drawable/ic_download"
                    app:tint="@color/primary" />
            </LinearLayout>

            <!-- Label vidéos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Vidéos"
                android:textColor="@color/gray_600"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Liste des vidéos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvVideos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>